<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_app_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/place_name"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="35dp"
        android:inputType="text"
        android:padding="15dp"
        android:text="Thuis"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/txt_app_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/latitude"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_app_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="35dp"
        android:inputType="text"
        android:padding="15dp"
        android:text="51.229603"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_app_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/longitude"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_app_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="35dp"
        android:inputType="text"
        android:padding="15dp"
        android:text="5.433441"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_app_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/open_ar_view" />

</LinearLayout>